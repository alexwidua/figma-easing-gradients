{
	"name": "figma-easing-gradients",
	"version": "2.0.0",
	"description": "Easing functions for gradient fills in Figma.",
	"keywords": [
		"figma-easing-gradients",
		"figma",
		"figma-plugin",
		"figma-plugins"
	],
	"license": "MIT",
	"author": "Alexander Widua",
	"dependencies": {
		"@create-figma-plugin/ui": "^2.1.3",
		"@create-figma-plugin/utilities": "^2.1.3",
		"@react-spring/web": "^9.5.5",
		"@use-gesture/react": "^10.2.20",
		"chroma-js": "^2.1.2",
		"easing-coordinates": "^2.0.2",
		"preact": "^10.5.14",
		"stylelint-config-idiomatic-order": "^8.1.0"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/alexwidua/figma-easing-gradients/"
	},
	"engines": {
		"node": ">=14"
	},
	"devDependencies": {
		"@create-figma-plugin/build": "^2.1.3",
		"@create-figma-plugin/tsconfig": "^2.1.3",
		"@figma/plugin-typings": "^1.53.0",
		"@types/chroma-js": "^2.1.3",
		"typescript": "^4"
	},
	"scripts": {
		"build": "build-figma-plugin --typecheck --minify",
		"watch": "build-figma-plugin --typecheck --watch"
	},
	"figma-plugin": {
		"id": "DEVELOPMENT",
		"name": "Easing Gradients Dev",
		"main": "src/main.ts",
		"ui": "src/ui.tsx",
		"editorType": [
			"figma"
		],
		"relaunchButtons": {
			"ReapplyEasing": {
				"name": "Re-apply gradient easing",
				"main": "src/main.ts",
				"ui": "src/ui.tsx"
			},
			"ResetEasing": {
				"name": "Reset gradient easing",
				"main": "src/main.ts",
				"ui": "src/ui.tsx"
			}
		}
	},
	"stylelint": {
		"extends": "stylelint-config-idiomatic-order"
	}
}
