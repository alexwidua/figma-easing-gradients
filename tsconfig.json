{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "target": "es6",
        "removeComments": true,
        "typeRoots": ["./node_modules/@types", "./node_modules/@figma"]
    },
    "include": [
        "plugin/**/*.ts",
        "ui/**/*.ts",
        "ui/**/*.tsx",
        "utils/**/*.ts",
        "./types.d.ts"
    ]
}
